{
  "name": "tvkit",
  "version": "0.19.0",
  "description": "Proxy to run a modern dev server in old browsers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfanger/tvkit.git"
  },
  "type": "module",
  "bin": {
    "tvkit": "bin/tvkit.js"
  },
  "scripts": {
    "dev": "node --watch bin/tvkit.js serve --port 3011 --browser ie11",
    "dev:latest": "node --watch bin/tvkit.js serve --browser=\"last 1 chrome versions\"",
    "lint": "concurrently -c \"#c596c7\",\"#3074c0\",\"#7c7cea\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --max-warnings=0 src",
    "format": "eslint --fix src && prettier --write src",
    "test": "vitest run",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.(c)?js": [
      "eslint --max-warnings 0 --no-ignore"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/babel__core": "^7.20.5",
    "@types/caniuse-lite": "^1.0.5",
    "@types/express": "^5.0.1",
    "@types/yargs": "^17.0.33",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-only-warn": "^1.1.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/runtime": "^7.27.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@ungap/is-connected": "^0.2.0",
    "abortcontroller-polyfill": "^1.7.8",
    "acorn": "^8.14.1",
    "acorn-walk": "^8.3.4",
    "browserslist": "^4.24.5",
    "caniuse-lite": "^1.0.30001718",
    "core-js": "^3.42.0",
    "core-js-compat": "^3.42.0",
    "cross-browser-polyfill": "^1.0.5",
    "custom-event-polyfill": "^1.0.7",
    "es6-proxy-polyfill": "^2.1.1",
    "express": "^5.1.0",
    "fast-text-encoding": "^1.0.6",
    "http-proxy-middleware": "^3.0.5",
    "intersection-observer": "^0.12.2",
    "magic-string": "^0.30.17",
    "node-before-polyfill": "^1.0.0",
    "node-html-parser": "^7.0.1",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.6",
    "postcss-selector-parser": "^7.1.0",
    "regenerator-runtime": "^0.14.1",
    "rollup": "^4.40.2",
    "systemjs": "^6.15.1",
    "terser": "^5.39.1",
    "unorm": "^1.6.0",
    "web-streams-polyfill": "^4.1.0",
    "whatwg-fetch": "^3.6.20",
    "yargonaut": "^1.1.4",
    "yargs": "^17.7.2"
  }
}
