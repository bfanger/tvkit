{
  "name": "tvkit",
  "version": "0.12.0",
  "description": "Proxy to run a modern dev server in old browsers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfanger/tvkit.git"
  },
  "type": "module",
  "bin": {
    "tvkit": "bin/tvkit.js"
  },
  "scripts": {
    "dev": "pm2-dev \"bin/tvkit.js serve --port 3011 --browser ie11\"",
    "dev:latest": "pm2-dev \"bin/tvkit.js serve --browser='last 1 chrome versions'\"",
    "lint": "concurrently -c \"#c596c7\",\"#3074c0\",\"#7c7cea\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check --loglevel=warn src",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext=js,ts,svelte --max-warnings=0 src",
    "format": "prettier --write . && eslint --ext=js,ts,svelte --fix src",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(c)?js": [
      "eslint --max-warnings 0 --no-ignore"
    ]
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.1",
    "@types/caniuse-lite": "^1.0.1",
    "@types/express": "^4.17.17",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-triple": "^0.5.8",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/runtime": "^7.22.5",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "acorn": "^8.9.0",
    "acorn-walk": "^8.2.0",
    "browserslist": "^4.21.9",
    "caniuse-lite": "^1.0.30001507",
    "core-js": "^3.31.0",
    "core-js-compat": "^3.31.0",
    "cross-browser-polyfill": "^1.0.5",
    "custom-event-polyfill": "^1.0.7",
    "express": "^4.18.2",
    "fast-text-encoding": "^1.0.6",
    "http-proxy-middleware": "^2.0.6",
    "intersection-observer": "^0.12.2",
    "magic-string": "^0.30.0",
    "node-html-parser": "^6.1.5",
    "postcss": "^8.4.24",
    "postcss-preset-env": "^8.5.1",
    "proxy-polyfill": "^0.3.2",
    "regenerator-runtime": "^0.13.11",
    "rollup": "^3.25.1",
    "systemjs": "^6.14.1",
    "terser": "^5.18.1",
    "unorm": "^1.6.0",
    "whatwg-fetch": "^3.6.2",
    "yargonaut": "^1.1.4",
    "yargs": "^17.7.2"
  }
}
